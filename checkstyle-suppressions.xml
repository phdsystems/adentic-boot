<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress MagicNumber in config classes - these are configuration constants -->
    <suppress checks="MagicNumber" files=".*[/\\]config[/\\].*\.java"/>

    <!-- Suppress MagicNumber in model classes - DTOs with default values -->
    <suppress checks="MagicNumber" files=".*[/\\]model[/\\].*\.java"/>

    <!-- Suppress JavadocVariable for model classes - Lombok @Data generates documentation -->
    <suppress checks="JavadocVariable" files=".*[/\\]model[/\\].*\.java"/>

    <!-- Suppress JavadocVariable for enum constants - self-documenting -->
    <suppress checks="JavadocVariable" files=".*HttpMethod\.java"/>

    <!-- Suppress HiddenField in constructors and setters - standard pattern -->
    <suppress checks="HiddenField" message="hides a field"/>

    <!-- Suppress AvoidStarImport for model packages - cleaner imports for DTOs -->
    <suppress checks="AvoidStarImport" files=".*Tool\.java"/>
    <suppress checks="AvoidStarImport" files=".*Provider\.java"/>
    <suppress checks="AvoidStarImport" files=".*AgenticServer\.java"/>

    <!-- Suppress TodoComment - TODOs are tracked in issue tracker -->
    <suppress checks="TodoComment"/>

    <!-- Suppress FinalClass for builder and utility classes -->
    <suppress checks="FinalClass" files="ResponseEntity\.java"/>

    <!-- Suppress RedundantModifier in record classes -->
    <suppress checks="RedundantModifier" files=".*Tool\.java"/>

    <!-- Suppress MissingSwitchDefault when all enum values are handled -->
    <suppress checks="MissingSwitchDefault" files="HttpClientTool\.java"/>

    <!-- Suppress VisibilityModifier for protected fields in base classes -->
    <suppress checks="VisibilityModifier" files="Base.*\.java"/>

    <!-- Suppress Javadoc for record components and builder methods -->
    <suppress checks="JavadocVariable" files=".*Config\.java" message="Missing a Javadoc comment"/>

    <!-- Suppress remaining magic numbers in all files - these are configuration values -->
    <suppress checks="MagicNumber"/>
</suppressions>
